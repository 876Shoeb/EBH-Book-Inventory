@model IEnumerable<BookInventory.Entities.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublicationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenreId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConditionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CallNumberId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in ViewBag.Book) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.ISBN
            </td>
            <td>
                @item.Title
            </td>
            <td>
                @item.Author
            </td>
            <td>
                @item.Publisher
            </td>
            <td>
                @item.PublicationDate
            </td>
            <td>
                @item.DescriptiveName
            </td>
            <td>
                @item.ConditionName
            </td>
            <td>
                @item.CallNumberId
            </td>
            <td>
                @item.IsAvailable
            </td>
            
            <td>
                <a class="btn btn-primary btn-sm"  asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-info btn-sm"  asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-danger btn-sm"  asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
               
        </tr>
}
    </tbody>
</table>
